<h1>Sign up</h1>
<%= form_for(@user) do |f| %>
	<div clas = "fields">
		<%= f.label :name %> <br />
		<%= f.text_field :name%>
	</div>
	<div clas = "fields">
		<%= f.label :email %> <br />
		<%= f.text_field :email%>
	</div>
	<div clas = "fields">
		<%= f.label :password %> <br />
		<%= f.password_field :password%>
	</div>
	<div clas = "fields">
		<%= f.label :password_confirmation, "Confirmation" %> <br />
		<%= f.password_field :password_confirmation%>
	</div>
	<div clas = "actoins">
		<%= f.submit "Sign up" %> <br />
		
	</div>
<% end %>	
